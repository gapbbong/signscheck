rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Attachments: Host uploads, Guests (public) download
    match /attachments/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: Authenticated users only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
