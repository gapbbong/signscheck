rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Attachments: Only authenticated users can access
    // TODO: Further restrict based on meeting ownership
    match /attachments/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Signatures: Only authenticated users
    match /signatures/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default: Authenticated users only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
