rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Meetings Collection: Host can write, Public can read (for signature page preview)
    match /meetings/{meetingId} {
      allow read: if true; 
      allow write: if request.auth != null && request.auth.uid == (resource == null ? request.resource.data.hostUid : resource.data.hostUid);
      allow create: if request.auth != null;
    }
    
    // Requests Collection: Public can read (tokenized by ID), only Host can create/update
    match /requests/{requestId} {
      allow read: if true; 
      
      // Only host can create/update
      allow create, update: if request.auth != null && 
                               request.auth.uid == (resource == null ? request.resource.data.hostUid : resource.data.hostUid);
      
      // Prevent deletion of signed requests
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.hostUid &&
                       resource.data.status != 'signed';
    }
    
    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
