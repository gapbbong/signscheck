rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Meetings Collection: Only host can access
    match /meetings/{meetingId} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == resource.data.hostId;
      allow create: if request.auth != null;
    }
    
    // Requests Collection: Host sees all, attendees see only theirs
    match /requests/{requestId} {
      // Host can read all requests for their meetings
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.hostId ||
                      request.auth.token.phone_number == resource.data.phone);
      
      // Only host can create/update
      allow create, update: if request.auth != null && 
                               request.auth.uid == resource.data.hostId;
      
      // Prevent deletion of signed requests
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.hostId &&
                       resource.data.status != 'signed';
    }
    
    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
