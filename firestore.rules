rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Meetings Collection: Host can write, Public can read (for signature page preview)
    match /meetings/{meetingId} {
      allow read: if true; 
      allow write: if request.auth != null && request.auth.uid == (resource == null ? request.resource.data.hostUid : resource.data.hostUid);
      allow create: if request.auth != null;
    }
    
    // Requests Collection: Public can read, attendee can sign, only Host can create/delete
    match /requests/{requestId} {
      allow read: if true; 
      
      // Allow host to update everything, attendee to update status/signature if pending
      allow update: if (request.auth != null && request.auth.uid == (resource == null ? request.resource.data.hostUid : resource.data.hostUid)) ||
                       (resource.data.status == 'pending' && request.resource.data.status == 'signed');
      
      allow create: if request.auth != null;
      
      // Prevent deletion of signed requests
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.hostUid &&
                       resource.data.status != 'signed';
    }
    
    // Templates Collection: Strictly personal
    match /templates/{templateId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == (resource == null ? request.resource.data.hostUid : resource.data.hostUid);
    }
    
    // Subscriptions Collection: Users can read their own, only server can write
    match /subscriptions/{subscriptionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Only server-side operations
    }
    
    // Payments Collection: Users can read their own, only server can write
    match /payments/{paymentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Only server-side operations
    }
    
    // Usage Collection: Users can read their own, only server can write
    match /usage/{usageId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Only server-side operations
    }
    
    // Analytics Events: Only authenticated users can read their own, server can write
    match /analytics_events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow client-side logging
    }
    
    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
